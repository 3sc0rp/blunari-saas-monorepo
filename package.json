{
  "name": "blunari-saas",
  "version": "1.0.0",
  "description": "Blunari SAAS Platform - Monorepo containing background-ops API, admin dashboard, and client dashboard",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "migrate:all": "turbo run migrate",
    "deploy:all": "turbo run deploy",
    "dev:background-ops": "turbo run dev --filter=background-ops",
    "dev:admin": "turbo run dev --filter=admin-dashboard",
    "dev:client": "turbo run dev --filter=client-dashboard"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "@types/node": "^20.6.0",
    "prettier": "^3.0.3",
    "eslint": "^8.48.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1"
  },
  "packageManager": "npm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
