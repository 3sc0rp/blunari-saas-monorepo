{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "build/**", "out/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "PORT",
        "DATABASE_URL",
        "SUPABASE_URL",
        "SUPABASE_ANON_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts", "test/**/*.tsx"]
    },
    "migrate": {
      "cache": false,
      "env": ["DATABASE_URL"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint"],
      "cache": false
    },
    "preview": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"],
      "env": [
        "NODE_ENV",
        "VITE_SUPABASE_URL",
        "VITE_SUPABASE_ANON_KEY",
        "VITE_SENTRY_DSN"
      ]
    },
    "clean": {
      "cache": false
    }
  },
  "globalDependencies": ["package.json", "turbo.json", ".env", ".env.local"]
}
