{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["deno.ns", "dom", "dom.iterable", "es2022"],
    "module": "esnext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "noEmit": true,
    "strict": true,
    "target": "es2022",
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ]
}