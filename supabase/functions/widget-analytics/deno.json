{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": true
  },
  "lint": {
    "files": {
      "include": ["index.ts"]
    }
  },
  "fmt": {
    "files": {
      "include": ["index.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "imports": {
    "supabase": "https://esm.sh/@supabase/supabase-js@2.39.3"
  }
}
